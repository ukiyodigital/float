{
  "compilerOptions": {
      "outDir": "./dist/",
      "sourceMap": true,
      "module": "commonjs",
      "target": "es5",
      "lib": ["dom", "es2017"],
      "moduleResolution": "node",
      "jsx": "react",
      "plugins": [
        {
          "name": "typescript-tslint-plugin",
          "configFile": "./tslint.json"
        }
      ]
  },
  "include": [
      "./src/**/*"
  ]
}
