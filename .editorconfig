# top-most EditorConfig file
root = true

[*]
indent_style = space
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8

[*.md]
trim_trailing_whitespace = false

[*.{ts,js,jsx,tsx,html}]
indent_size = 2

[{.eslintrc,.postcssrc}]
indent_size = 2

[*.{css,less,json}]
indent_size = 2
